{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "prettier"
  ],
  "globals": {
    "setup": "readonly",
    "draw": "readonly",
    "keyPressed": "readonly",
    "windowResized": "readonly",
    "createCanvas": "readonly",
    "angleMode": "readonly",
    "colorMode": "readonly",
    "noStroke": "readonly",
    "background": "readonly",
    "push": "readonly",
    "translate": "readonly",
    "rotate": "readonly",
    "map": "readonly",
    "lerp": "readonly",
    "frameCount": "readonly",
    "pop": "readonly",
    "tint": "readonly",
    "imageMode": "readonly",
    "image": "readonly",
    "loadImage": "readonly",
    "keyCode": "readonly",
    "key": "readonly",
    "fullscreen": "readonly",
    "resizeCanvas": "readonly",
    "resetMatrix": "readonly",
    "fill": "readonly",
    "textAlign": "readonly",
    "textSize": "readonly",
    "text": "readonly",
    "createFileInput": "readonly",
    "width": "readonly",
    "height": "readonly",
    "windowWidth": "readonly",
    "windowHeight": "readonly",
    "CENTER": "readonly",
    "LEFT": "readonly",
    "TOP": "readonly",
    "DEGREES": "readonly",
    "HSB": "readonly",
    "ENTER": "readonly",
    "p5": "readonly"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "no-console": [
      "warn",
      {
        "allow": [
          "warn",
          "error",
          "info"
        ]
      }
    ],
    "eqeqeq": [
      "error",
      "always"
    ],
    "curly": [
      "error",
      "all"
    ]
  }
}
